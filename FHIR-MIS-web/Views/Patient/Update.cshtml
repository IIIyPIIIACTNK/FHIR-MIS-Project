@using FHIR_MIS_web.ViewModels;
@using Hl7.Fhir.Model;
@model UpdatePatientViewModel;


<div class="container">
    <form method="post" asp-action="Update" enctype="multipart/form-data">
        <input type="hidden" asp-for="PatientId" id="PatientId"/>
        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <label asp-for="Surname" class="form-label">Фамилия</label>
                    <input asp-for=Surname class="form-control" placeholder="Surname" />
                </div>
                <div class="mb-3">
                    <label asp-for=Name class="form-label">Имя</label>
                    <input asp-for=Name class="form-control" placeholder="Name"/>
                </div>
                <div class="mb-3">
                    <label asp-for=Patronymic class="form-label">Отчество</label>
                    <input asp-for=Patronymic class="form-control" placeholder="Patronymic"/>
                </div>
            </div>
            <div class="col">
                <div class="row mb-3">
                    <div class="col">
                        <label asp-for=Gender class="form-label">Пол</label>
                        <select asp-for=Gender class="form-select" placeholder="@Model.Gender"></select>
                    </div>
                    <div class="col">
                        <label asp-for=BirthDate class="form-label">Дата рождения</label>
                        <input asp-for=BirthDate type="date" class="form-control" placeholder="@Model.BirthDate"/>
                    </div>
                </div>
                    <div class="mb-3">
                        <label asp-for=@Model.City class="form-label">Город</label>
                        <input asp-for=@Model.City class="form-control" placeholder="@Model.City" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Street " class="form-label">Улица</label>
                        <input asp-for=@Model.Street class="form-control" placeholder="@Model.Street" />
                    </div>
            </div>
        </div>
        <div class="col mb-3">
            <div class="mb-3">
                <label asp-for=Telephone class="form-label">Телефон</label>
                <input asp-for="Telephone" type="tel" class="form-control"/>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Обновить</button>
    </form>
</div>