@using FHIR_MIS_web.ViewModels
@using FHIR_MIS_web.Data.Enums
@model SearchViewModel;

<form asp-action="SearchResult" asp-controller="FireLy" enctype="multipart/form-data" method="post">
    <div class="col-md-4">
        <h4 class="card-title">Поиск</h4>
        <div>
            <label asp-for="LastName">Фамилия</label>
            <input asp-for=LastName class="form-control"/>
            <label asp-for="FirstName">Имя</label>
            <input asp-for=FirstName class="form-control"/>
            <label asp-for="FathersName">Отчество</label>
            <input asp-for=FathersName class="form-control"/>
            <div class="row">
                <div class="col-md-2">
                    <label asp-for="Gender">Пол</label>
                    <select asp-for=Gender asp-items="@Html.GetEnumSelectList<GenderEnum>()" class="form-select-sm">
                        <option selected="selected" value=""></option>
                    </select>
                </div>
                <div class="col-md-4 offset-4">
                    <label asp-for="Birthday">Дата рождения</label>
                    <input asp-for=Birthday type="date" class="form-control"/>
                </div>
            </div>
            <div>
                <p>Адрес</p>
                <input class="form-control"/>
            </div>

        </div>
        <input type="submit" class="btn btn-primary"/>
    </div>
</form>
