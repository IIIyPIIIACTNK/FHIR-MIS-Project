@using FHIR_MIS_web.ViewModels
@model IEnumerable<FireLyPatientViewModel>;



<div class="row">
    <div class="col-md-8">
        <table class="table table-bordered table-hover">
            <tr>
                <th>Id</th>
                <th>ФИО</th>
                <th>Пол</th>
                <th>Дата рождения</th>
                <th>Адресс</th>
            </tr>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FullName()</td>
                    <td>@item.Gender</td>
                    <td>@item.Birthday</td>
                    <td>@item.FullAddress()</td>
                </tr>
            }
        </table>
    </div>
    <div>
        <div>
            <a asp-action="Search" class="btn btn-primary">Поиск</a>
        </div>
    </div>
</div>
