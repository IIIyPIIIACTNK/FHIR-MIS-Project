@using Hl7.Fhir.Model;
@using FHIR_MIS_web.ViewModels;

@model IEnumerable<FireLyPatientViewModel>;

@{
    FireLyPatientViewModel Search = new FireLyPatientViewModel();
}

<link rel="stylesheet" href="~/css/style.css"/>
 
<div class="row">
    <div class="col-md-8">
        <table class="table table-bordered table-hover">
            <tr>
                <th>Id</th>
                <th>ФИО</th>
                <th>Пол</th>
                <th>Дата рождения</th>
                <th>Адресс</th>
            </tr>  
            @foreach (var item in @Model)
            {
                 <tr>
                     <td>@item.Id</td>
                    <td>@item.FullName()</td>
                    <td>@item.Gender</td>
                    <td>@item.Birthday</td>
                    <td>@item.FullAddress()</td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Patient" asp-action="Detail" asp-route-id="@item.Id"></a>
                    </td>
                 </tr>
            }
        </table>
    </div>
    <div class="col-md-4"> 
            <div>
                <a asp-action="Search" class="btn btn-primary">Поиск</a>
                <a asp-controller="Patient" asp-action="Create" class="btn btn-primary">Создать</a>
            </div>
    </div>
</div>
